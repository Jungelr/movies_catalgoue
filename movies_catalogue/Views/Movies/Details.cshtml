@model movies_catalogue.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <div class="row">
        <div class="col">
            <h4>Genres:</h4>
            <ul class="list-group">
                @foreach (var genre in Model.MoviesInGenres)
                {
                    <li class="list-group-item">@genre.Genre.GenreName</li>
                }
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h4>People:</h4>
            <ul class="list-group">
                @foreach (var person in Model.PeopleInMovies)
                {
                    <li class="list-group-item">@person.Person.FullName() as @person.Person.Role</li>
                }
            </ul>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MovieId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
